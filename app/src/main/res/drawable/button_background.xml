<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="#1C1C1C" />
            <corners android:radius="8dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:angle="90"
                android:endColor="#00FF00"
                android:startColor="#00CC00" />
            <corners android:radius="8dp" />
        </shape>
    </item>
</selector>
